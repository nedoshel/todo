div class="page-header"
  h1= Task.model_name.human(count: 2)
table class="table table-striped"
  thead
    tr
      th= Task.human_attribute_name(:id)
      th= Task.human_attribute_name(:title)
      th= Task.human_attribute_name(:description)
      th= Task.human_attribute_name(:task_at)
      th= Task.human_attribute_name(:is_complete)
      th= Task.human_attribute_name(:created_at)
      th
  tbody
    = sync_new partial: 'task_list_view', resource: Task.new
    = sync partial: 'task_list_view', collection: @tasks



= link_to "<i class='glyphicon glyphicon-plus'>Добавить</i>".html_safe, 'javascript:;', data: { toggle: "collapse", target: '#new_task' }

#new_task.collapse
  .col-md-offset-1.col-md-6
    = render 'form'

